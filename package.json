{
  "name": "parabank-bdd-automation",
  "version": "1.0.0",
  "description": "ParaBank BDD Test Automation with Playwright and Cucumber - 200 Test Cases",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:auth": "cucumber-js --tags '@authentication'",
    "test:registration": "cucumber-js --tags '@registration'",
    "test:accounts": "cucumber-js --tags '@accounts'",
    "test:transactions": "cucumber-js --tags '@transactions'",
    "test:api": "cucumber-js --tags '@api'",
    "test:automated": "cucumber-js --tags '@automated'",
    "test:manual": "cucumber-js --tags '@manual'",
    "test:smoke": "cucumber-js --tags '@smoke'",
    "test:critical": "cucumber-js --tags '@critical'",
    "test:report": "npm run test -- --format html:reports/cucumber-report.html",
    "test:allure": "cucumber-js --config=cucumber.allure.js --profile=allure",
    "test:nightly": "cucumber-js --config=cucumber.allure.js --profile=nightly",
    "test:playwright": "playwright test --config=playwright.allure.config.ts",
    "reports:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "reports:open": "allure open reports/allure-report",
    "automation": "ts-node bin/automation.ts",
    "automation:start": "npm run automation start",
    "automation:run": "npm run automation run",
    "automation:test": "npm run automation test",
    "automation:status": "npm run automation status",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf reports dist",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "typescript",
    "parabank",
    "automation",
    "testing"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@cucumber/html-formatter": "^21.0.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.40.0",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.13",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.3.3",
    "allure-playwright": "^3.3.3",
    "eslint": "^8.50.0",
    "express": "^5.1.0",
    "glob": "^11.0.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "playwright-test": "^14.1.12",
    "rimraf": "^5.0.5",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@faker-js/faker": "^8.2.0",
    "dotenv": "^16.6.1",
    "playwright": "^1.40.0",
    "winston": "^3.11.0"
  }
}
