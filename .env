# ParaBank BDD Automation Environment Configuration
# Based on MTP-PARABANK-002 Master Test Plan

# Test Environment
TEST_ENV=testing
BASE_URL=https://parabank.parasoft.com/parabank

# Browser Configuration
BROWSER=chromium
HEADLESS=false
SLOW_MO=100

# Test Execution
TEST_TIMEOUT=30000
RETRIES=1
PARALLEL=1

# Reporting
SCREENSHOT=only-on-failure
VIDEO=retain-on-failure

# Logging
LOG_LEVEL=INFO

# Manual Testing
MANUAL_TEST_TRACKING=true
